{
  "name": "webrgp/craft-ignition",
  "description": "Ignition error handling alternative for Craft CMS.",
  "type": "craft-plugin",
  "license": "mit",
  "authors": [
    {
      "name": "Rodrigo Passos",
      "homepage": "https://rodrigopassos.com"
    }
  ],
  "keywords": [
    "craft",
    "cms",
    "craftcms",
    "error",
    "error-reporting",
    "ignition",
    "php"
  ],
  "require": {
    "craftcms/cms": "^4.3.0 || ^5.0.0",
    "webrgp/craft-ignition-core": "^1.1.0"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "autoload": {
    "psr-4": {
      "webrgp\\ignitionplugin\\": "src/"
    }
  },
  "config": {
    "allow-plugins": {
      "craftcms/plugin-installer": true,
      "yiisoft/yii2-composer": true
    },
    "optimize-autoloader": true,
    "sort-packages": true
  },
  "extra": {
    "name": "Ignition",
    "handle": "ignition",
    "developer": "Rodrigo Passos",
    "developerUrl": "https://rodrigopassos.com/",
    "changelogUrl": "https://raw.githubusercontent.com/webrgp/craft-ignition/main/CHANGELOG.md",
    "class": "webrgp\\ignitionplugin\\Ignition"
  },
  "support": {
    "issues": "https://github.com/webrgp/craft-ignition/issues?state=open",
    "source": "https://github.com/webrgp/craft-ignition",
    "docs": "https://github.com/webrgp/craft-ignition/blob/master/README.md"
  }
}
